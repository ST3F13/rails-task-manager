<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<p>the task is <%= @task.completed %></p>
<%= link_to "Back to list", tasks_path %>
<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Edit #{@task.title}", edit_task_path(@task) %>
